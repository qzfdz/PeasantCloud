<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#f5f4f9"
   android:orientation="vertical"
    tools:context=".AddFarmerFriendActivity" >
    
    <RelativeLayout 
	    android:layout_height="50dp"
	    android:layout_width="match_parent"
	    android:background="#4BA42F">
	    <RelativeLayout 
	        android:id="@+id/back_btn_addfriend"
	        android:layout_height="50dp"
	        android:layout_width="50dp">
	        <ImageView 
	        
	        android:layout_height="20dp"
	        android:layout_width="10dp"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="20dp"
	        android:src="@drawable/back_btn"/>
	    </RelativeLayout>
	    
	    <TextView 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="添加农友"
	        android:textSize="22sp"
	        android:textColor="#fff"/>
	   
	</RelativeLayout>
	
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <EditText  
   	    		android:background="#fff"
                android:id="@+id/search_et_input_addfriend"  
                android:padding="10dp"
                android:layout_gravity="center_vertical"  
               android:layout_marginTop="10dp" 
                android:drawableLeft="@drawable/chat_search_small_icon"  
                android:drawablePadding="10dp"  
                android:layout_width="match_parent"  
                android:layout_height="wrap_content"  
                android:textSize="12sp"  
                android:imeOptions="actionSearch"  
                android:inputType="text"  
                android:hint="手机号 / 用户名"/> 
      		
        
    </RelativeLayout>
    
