                android:drawablePadding="5dp" 
                android:drawableLeft="@drawable/chat_search_small_icon"       
                android:layout_width="match_parent"  
                android:layout_height="wrap_content"  
                android:textSize="16sp"  
                android:imeOptions="actionSearch"  
